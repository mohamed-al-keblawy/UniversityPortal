@using UniversityPortal.Models.Entities
@model IEnumerable<Assignment>
@{
    ViewData["Title"] = "Assignments";
}

<h2>Assignments</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Create New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.DueDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AssignmentId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
